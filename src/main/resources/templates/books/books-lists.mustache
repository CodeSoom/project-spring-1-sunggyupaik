{{>layout/header}}
<style type="text/css">

    body {
        font-family: "Aller", "sans-serif";
    }

    a:-webkit-any-link {
        text-decoration: none;
    }

    ul {
        list-style-type: none;
    }

    .img-wrapper {
        text-align: center;
        width: 100%;
        height: 100%;
        border: 0.1em solid #ccc;
        border-radius: 0.4em;
        background-color: #f3f3f3;
        box-shadow: 0.1em 0.1em 0.5em -0.2em #777;
        margin: 1em 1em;
    }

    img {
        border-radius: 0.4em 0.4em 0 0;
    }

    .gallery-wrapper ul li{
        display: inline-block;
        margin: 5px 10px;
    }

    h4 {
        width: 100%;
        text-align: center;
        font-size: 0.5em;
        margin: 0;
        padding: 0.5em 0;
        font-weight: bold;
        color: black;
    }
</style>

<div class="gallery-wrapper">
    <h1>베스트 셀러</h1>
    <ul>
        {{#book}}
            <li>
                <div class="img-wrapper">
                    <img src="{{coverLargeUrl}}" alt="">
                    <div>
                        <h4>{{title}}</h4>
                        <h4>{{pubDate}}</h4>
                    </div>
                </div>
            </li>
        {{/book}}
    </ul>
</div>
{{>layout/footer}}
