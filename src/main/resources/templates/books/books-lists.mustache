{{>layout/header}}
<style type="text/css">
    body {
        font-family: "Aller", "sans-serif";
        margin: 0;
    }

    a:-webkit-any-link {
        text-decoration: none;
    }

    ul {
        list-style-type: none;
    }

    .img-wrapper {
        text-align: center;
        border: 0.1em solid #ccc;
        border-radius: 0.4em;
        background-color: #f3f3f3;
        box-shadow: 0.1em 0.1em 0.5em -0.2em #777;
        width: 228px;
        margin: 50px 5px;
    }

    img:hover {
        cursor:pointer;
    }

    .img-wrapper:hover {
        transform:scale(1.2);
        transition: 0.5s;
    }

    img {
        border-radius: 0.4em 0.4em 0 0;
        width: 225px;
    }

    .gallery-wrapper ul li {
        display: inline-block;
        margin: 5px 10px;
    }

    h6 {
        text-align: center;
        font-size: 13px;
        margin: 0;
        padding: 0.5em 0.5em;
        font-weight: bold;
        color: black;
    }

    .modal {
        position:absolute;
        width:50%; height:50%;
        top:0; left:0;
        display:none;
    }

    .modal_content {
        border: 2px solid black;
        width:500px;
        height:350px;
        background:#fff;
        border-radius:10px;
        position:relative;
        text-align:center;
        box-sizing:border-box;
        padding:75px;
        line-height:23px;
        cursor:pointer;
    }

    table, th, td {
        border: 1px solid black;
        text-align: center;
        padding: 10px;
        margin: 10px auto;
    }
</style>

<div class="container-fluid" style="margin-top: 100px">
    <div class="row">
        <div class="col-md-2">
            <div class="panel panel-info">
                <ul class="list-group">
                    <li class="list-group-item"><a href="/books/bestseller">베스트셀러</a></li>
                    <li class="list-group-item"><a href="/books/recommend">추천도서</a></li>
                    <li class="list-group-item"><a href="/books/new">신간도서</a></li>
                    <li class="list-group-item">
                        <form class="navbar-form pull-left" action="/books/search" post="get">
                            <label for="keyword"></label>
                            <input type="text" id="keyword" name="keyword" placeholder="제목을 입력하세요">
                            <button type="submit" class="btn btn-primary btn-sm">검색</button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
        <div class="card shadow col-md-10">
            <div class="card-body">
                <h4 class="card-title" style="text-align: center;">{{bookType}}</h4>
                <h6> 책 이미지를 클릭하면 보다 자세한 정보를 확인할 수 있습니다 </h6>
                <div class="gallery-wrapper">
                    <ul>
                        {{#book}}
                            <li>
                                <div class="img-wrapper">
                                    <div id="book{{itemId}}" onclick="fadeInModal('#{{itemId}}')">
                                        <img src="{{coverLargeUrl}}" alt="">
                                    </div>
                                    <div class="title">
                                        <h6>{{title}}</h6>
                                    </div>
                                </div>
                            </li>
                        {{/book}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

{{#book}}
    <div id="{{itemId}}" class="modal">
        <div class="modal_content" id="modal{{itemId}}"
             onclick="fadeOutModal('#{{itemId}}')">
            <form method="get" action="/studys/save">
                <input type="hidden" name="bookName" value="{{title}}">
                <input type="hidden" name="bookImage" value="{{coverLargeUrl}}">
                <h4>{{title}}</h4>
                <table>
                    <tr>
                        <th>출판날짜</th>
                        <td>{{pubDate}}</td>
                    </tr>
                    <tr>
                        <th>작가</th>
                        <td>{{author}}</td>
                    </tr>
                    <tr>
                        <th>출판사</th>
                        <td>{{publisher}}</td>
                    </tr>
                </table>
                <button type="submit" class="btn btn-primary">스터디 만들기</button>
                <button type="button" class="btn btn-danger">취소</button>
            </form>
        </div>
    </div>
{{/book}}
<script src="/js/app/books.js"></script>
{{>layout/footer}}
