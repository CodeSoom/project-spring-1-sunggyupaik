{{>layout/header}}
<style type="text/css">
    h4 {
        text-align: center;
    }

    .list-group {
        text-align: center;
        line-height: 25px;
    }
</style>
<div class="container-fluid" style="margin-top: 100px">
    <div class="row">
        <div class="col-md-2">
            <div class="panel panel-info">
                <ul class="list-group">
                    <li class="list-group-item">스터디 이름<br> <bold>{{study.name}}</bold></li>
                    <li class="list-group-item">스터디 책<br> <bold>{{study.bookName}}</bold></li>
                    <li class="list-group-item">연락처<br> <bold>{{study.contact}}</bold></li>
                    <li class="list-group-item">시작날짜<br> <bold>{{study.startDate}}</bold></li>
                    <li class="list-group-item">마감날짜<br> <bold>{{study.endDate}}</bold></li>
                    <li class="list-group-item">시간<br> <bold>{{study.startTime}} ~ {{study.endTime}}</bold></li>
                    <li class="list-group-item">요일<br> <bold>{{study.day}}</bold></li>
                </ul>
            </div>
        </div>
        <div class="card shadow col-md-9" style="min-height:600px;">
            <div class="card-body">
                <h4 class="card-title">스터디 신청자</h4>
                <table class="table table-hover" id='board_list'>
                    <thead>
                    <tr>
                        <th class="text-center d-none d-md-table-cell">이름</th>
                        <th class="text-center d-none d-md-table-cell">이메일</th>
                        <th class="text-center d-none d-md-table-cell">닉네임</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#accounts}}
                        <tr>
                            <td class="text-center d-none d-md-table-cell">{{name}}</td>
                            <td class="text-center d-none d-md-table-cell">{{email}}</td>
                            <td class="text-center d-none d-md-table-cell">{{nickname}}</td>
                        </tr>
                    {{/accounts}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{{>layout/footer}}
