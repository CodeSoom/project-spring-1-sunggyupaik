{{>layout/header}}
<link rel="stylesheet" type="text/css" href="/js/app/account.css">
<h1>회원정보 수정</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="id"> 회원번호 </label>
                <input type="text" class="form-control" id="id" value="{{account.id}}" readonly>
            </div>
            <div class="form-group">
                <input type="hidden" id="profileImage" value="{{account.uploadFile.fileName}}">
                <label for="uploadFile"> 프로필 사진 </label>
                <div class="container">
                    <div class="row">
                        <div class="col-sm-2 imgUp">
                            <div class="imagePreview"></div>
                            <label class="btn btn-primary">
                                Upload<input type="file" id="uploadFile" class="uploadFile img" value="Upload Photo" style="width: 0px;height: 0px;overflow: hidden;">
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="name"> 이름 </label>
                <input type="text" class="form-control" id="name" value="{{account.name}}" readonly>
            </div>
            <div class="form-group">
                <label for="email"> 이메일 </label>
                <input type="text" class="form-control" id="email" value="{{account.email}}" readonly>
            </div>
            <div class="form-group">
                <label for="nickname"> 닉네임 </label>
                <input type="text" class="form-control" id="nickname" value="{{account.nickname}}">
            </div>
            <div class="form-group">
                <label for="password"> 비밀번호 </label>
                <input type="password" class="form-control" id="password" value="">
            </div>
            <div class="form-group">
                <label for="newPassword"> 새로운 비밀번호 </label>
                <input type="password" class="form-control" id="newPassword" value="">
            </div>
            {{#studyName}}
                <div class="form-group">
                    <label for="study"> 가입한 스터디 </label>
                    <input type="text" class="form-control" id="study" value="{{.}}" readonly>
                </div>
            {{/studyName}}
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-update">수정 완료</button>
        <button type="button" class="btn btn-danger" id="btn-account-delete">삭제</button>
    </div>
</div>
<script src="/js/app/account.js"></script>
{{>layout/footer}}
