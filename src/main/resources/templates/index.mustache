{{>layout/header}}

<h1>Book Club</h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/users/save" role="button" class="btn btn-primary">회원가입</a>
            <a href="/studys/save" role="button" class="btn btn-primary">스터디 생성</a>
            <a href="/books/bestseller" role="button" class="btn btn-primary">베스트셀러 조회</a>
            {{#userName}}
                Logged in as: <span id="user">{{userName}}</span>
                <a href="/logout" class="btn btn-info active" role="button">Logout</a>
            {{/userName}}
        </div>
    </div>
    <br>
    <!-- 목록 출력 영역 -->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>스터디 번호</th>
            <th>제목</th>
            <th>인원제한</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#study}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/studys/update/{{id}}">{{title}}</a></td>
                <td>{{size}}</td>
            </tr>
        {{/study}}
        </tbody>
    </table>
</div>

{{>layout/footer}}
